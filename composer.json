{
    "name": "crlstve/portafolio",
    "description": "Portafolio personal de Carles Esteve - Full Stack Web Developer",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Carles Esteve",
            "email": "ecarles10@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "resend/resend-php": "^0.7.0",
        "google/recaptcha": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "controllers/functions.php",
            "controllers/recaptcha_helper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}